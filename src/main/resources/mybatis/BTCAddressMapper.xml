<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cdkj.coin.dao.IBTCAddressDAO">

    <resultMap id="btcAddress_DB_Result" type="com.cdkj.coin.domain.BTC.BTCAddress">
        <id column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="address" property="address"/>
        <result column="create_datetime" property="createDateTime"/>
    </resultMap>

    <sql id="where_condition">
        <trim prefix="WHERE" prefixOverrides="AND | OR">

            <if test="id != null and id != '' ">
                AND t.id = #{id}
            </if>
            <if test="type != null and type != '' ">
                AND t.type = #{type}
            </if>
            <if test="address != null and address != '' ">
                AND t.address = #{address}
            </if>

        </trim>
    </sql>

    <select id="select_btcAddress" parameterType="com.cdkj.coin.domain.BTC.BTCAddress" resultMap="btcAddress_DB_Result">
        SELECT
        t.id
        ,t.type
        ,t.address
        ,t.create_datetime
        FROM
        tctq_btc_address t
        <include refid="where_condition"/>
        <trim prefix="ORDER BY ">
            <if test="order != null and order != '' ">
                t.${order}
            </if>
        </trim>
    </select>

    <select id="selectTotalCount" parameterType="com.cdkj.coin.domain.BTC.BTCAddress"
            resultType="java.lang.Long">
        SELECT count(1) FROM tctq_btc_address t
        <include refid="where_condition"/>
    </select>

    <insert id="insert_btcAddress" parameterType="com.cdkj.coin.domain.BTC.BTCAddress">
        INSERT INTO
            tctq_btc_address (
                type,
                address,
                create_datetime
            )
        VALUES (
            #{type},
            #{address},
            now()
        )
    </insert>

    <select id="getAddressCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM tctq_btc_address
        WHERE address = #{address}
    </select>

    <select id="selectTotalCountByAddress" resultType="java.lang.Long">
        SELECT count(1)
        FROM `tctq_btc_address`
        WHERE `address` = #{address}
    </select>

</mapper>